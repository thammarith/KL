{
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log",
				"*.local"
			],
			"predeploy": [
				"pnpm --prefix \"$RESOURCE_DIR\" run lint",
				"pnpm --prefix \"$RESOURCE_DIR\" run build"
			]
		}
	],
	"hosting": {
		"public": "dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "!/@(manifest.json|sw.js|registerSW.js|workbox-*.js|offline.html)",
				"destination": "/index.html"
			}
		],
		"headers": [
			{
				"source": "manifest.json",
				"headers": [
					{
						"key": "Content-Type",
						"value": "application/manifest+json"
					},
					{
						"key": "Cache-Control",
						"value": "max-age=86400"
					}
				]
			},
			{
				"source": "**/*.@(jpg|jpeg|gif|png|webp|svg|ico)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=31536000"
					}
				]
			},
			{
				"source": "**/*.@(js|css)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=31536000"
					}
				]
			}
		]
	}
}
